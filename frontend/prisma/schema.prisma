generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  image         String?
  accounts      Account[]
  sessions      Session[]
  queries       Query[]
  files         UploadedFile[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Query {
  id          String   @id @default(cuid())
  name        String
  model       String
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  files       QueryFile[]
  messages    Message[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model UploadedFile {
  id        String   @id @default(cuid())
  filename  String
  path      String
  size      Int
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  queries   QueryFile[]
  createdAt DateTime @default(now())
}

model QueryFile {
  queryId String
  fileId  String
  query   Query        @relation(fields: [queryId], references: [id], onDelete: Cascade)
  file    UploadedFile @relation(fields: [fileId], references: [id], onDelete: Cascade)

  @@id([queryId, fileId])
}

model Message {
  id        String   @id @default(cuid())
  role      String
  content   String   @db.Text
  model     String?
  tokens    Int?
  queryId   String
  query     Query    @relation(fields: [queryId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}
